# Stripe API Keys
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get this from Stripe Dashboard > Developers > Webhooks after creating webhook endpoint
# IMPORTANT: Required for production to verify webhook signatures
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Vercel KV (Redis) - For Inventory Management
# These are automatically provided by Vercel when you create a KV store
# In Vercel Dashboard: Storage > Create Database > KV
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token

# Admin Password
# Used for admin endpoints like inventory initialization
# Change this to a secure password in production
ADMIN_PASSWORD=changeme
